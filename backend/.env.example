# Backend Environment Variables
# ==============================
# Copy this file to .env and fill in the values

# Application settings
DEBUG=false
API_HOST=0.0.0.0
API_PORT=8000

# CORS settings (comma-separated origins or "*" for all)
CORS_ORIGINS=http://localhost,http://localhost:3000,http://localhost:5173

# Database settings
# For SQLite (local development):
DATABASE_URL=sqlite+aiosqlite:///./pillpal.db

# For PostgreSQL (Docker or production):
# DATABASE_URL=postgresql+asyncpg://pillpal:pillpal_secret@localhost:5432/pillpal

# Twilio settings (for SMS reminders)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# OpenAI settings (for prescription extraction)
OPENAI_API_KEY=

# Prescription Extractor Service
EXTRACTOR_SERVICE_URL=http://localhost:8001
EXTRACTOR_PORT=8001
